<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#selectRoutes">
    Select routes
</button>
<!-- Modal -->
<div class="modal fade" id="selectRoutes" tabindex="-1" role="dialog" aria-labelledby="selectRoutesTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="selectRoutesTitle">Select routes</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <div class="btn-group btn-matrix">
                    @if (Subscriptions is null)
                    {
                        <b>Loading..</b>
                    }
                    else
                    {
                        @foreach (var route in Subscriptions)
                        {
                            <label class="btn btn-default" role="button">
                                <input @onclick="(() => OnChecked(route))" @bind="route.IsActive" type="checkbox" autocomplete="off" /> @route.RouteData.RouteId
                            </label>
                        }
                    }
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Save</button>
            </div>
        </div>
    </div>
</div>

